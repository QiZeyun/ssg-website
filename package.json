{
  "name": "ssg-website",
  "version": "1.0.0",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "description": "Static Site Generation website with SEO and analytics",
  "scripts": {
    "dev": "next dev --webpack",
    "build": "next build --webpack",
    "start": "next start",
    "lint": "eslint .",
    "type-check": "tsc --noEmit",
    "export": "next build --webpack",
    "validate": "tsx scripts/validate-build.ts",
    "preview": "tsx scripts/preview-build.ts",
    "build:preview": "pnpm build && pnpm validate && pnpm preview",
    "pre-commit:check": "tsx scripts/pre-commit-check.ts",
    "prepare": "husky"
  },
  "dependencies": {
    "gray-matter": "^4.0.3",
    "highlight.js": "^11.11.1",
    "next": "^16.1.1",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "rehype-highlight": "6",
    "rehype-raw": "^7.0.0",
    "rehype-stringify": "^10.0.1",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-parse": "^11.0.0",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "eslint-plugin-local-rules": "^3.0.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.33",
    "serve": "^14.2.5",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
